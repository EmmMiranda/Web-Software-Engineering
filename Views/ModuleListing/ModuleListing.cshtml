@model IEnumerable<Module>

@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Listing</title>
</head>

<body class="m-1 p-1">
    <div class="bg-primary p-2 text-light mb-3"><h4>Module Listing</h4></div>
     <form asp-action="BackToModule" method="get">
        <div class="text-right">
        <button type="submit" class="btn btn-secondary btn-sm mb-3">Module Setup</button>
        </div>
    </form>

    <table class="table table-striped table-bordered-sm">
        <thead>
            <tr>
                <th>Module Code</th>
                <th>Module Name</th>
                <th>Module Description</th>
                <th>Module Version</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Module m in Model)
            {
            <tr>
                <td>@m.Mod_Code</td>
                <td>@m.Mod_Name</td>
                <td>@m.Mod_Description</td>
                <td>@m.Mod_Version</td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>