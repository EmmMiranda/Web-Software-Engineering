@model IEnumerable<Customer>

@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Search</title>
</head>

<body class="m-1 p-1">
    <div class="bg-primary p-2 text-light"><h4>Search Results</h4></div>

    <table class="table table-striped table-bordered-sm">
        <thead>
            <tr>
                <th>Customer Code</th>
                <th>Customer Name</th>
                <th>Customer Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                string ControllerName = ViewBag.ControllerName;
                <tr>
                    <td>@Html.ActionLink(@r.Cst_Code, "SelectCustomer", ControllerName, r)</td> @* new { @ViewBag.ControllerName }, s)</td> *@
                    <td>@r.Cst_Name</td>
                    <td>@r.Cst_Description</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>