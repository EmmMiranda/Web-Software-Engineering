@{
    Layout = "_Layout";
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<body class="p-1">
    <div class="bg-primary p-2 text-light text-center"><h4>System Registration Setup</h4></div><br />
    
    <div class="container">
        <form method="get" class="text-center">

            <div class="btn-group-vertical">
                <button type="submit" asp-action="SystemRegistration" class="btn btn-primary mb-1">System Entry Setup</button>
                <button type="submit" asp-action="ModuleSetup" class="btn btn-secondary mb-1">Module Entry Setup</button>
                <button type="submit" class="btn btn-primary mb-1">Version Entry Setup</button>
                <button type="submit" class="btn btn-secondary mb-1">Enhancement Entry Setup</button>
            </div>

        </form>
    </div>

</body>
