@model RegistrationSystem.Models.ModuleSelectionList
@{
    Layout = "_Layout";
    ViewBag.Title = "Module Selection";
    ViewBag.TxtAlign = "text-left";
    ViewBag.HeaderTitle = "Module Selection Listing";
}

<div class="text-right mp-3 mb-3">
    <a asp-action="Index" class="btn btn-secondary btn-sm">System Registration</a> 
</div>

<form asp-action="ModuleSelection" method="post">

    <input type="hidden" asp-for="@Model.srk.Cst_Code"/>
    <input type="hidden"  asp-for="@Model.srk.Sys_Code"/>
    <input type="hidden" asp-for="@Model.srk.Ver_Code" />

    <table class="table table-striped table-bordered-sm">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Description</th>
                <th>Selection</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.module_list.Count; i++)
            {
                <tr>
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.module_list[i].Mod_Sys_Code" />
                        <input type="hidden" asp-for="@Model.module_list[i].Mod_Code" />
                    </div>
                    <td>@Model.module_list[i].Mod_Code</td>
                    <td>@Model.module_list[i].Mod_Name</td>
                    <td>@Model.module_list[i].Mod_Description</td>
                    <td><input type="checkbox" asp-for="@Model.selection_list[i]" /></td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <button type="submit" class="btn btn-primary btn-sm">Summit</button>
        <button type="submit" asp-action="ModuleCancel" class="btn btn-primary btn-sm" formmethod="get">Cancel</button>
    </div>
</form>