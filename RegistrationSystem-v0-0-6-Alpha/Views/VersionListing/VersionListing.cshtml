@model IEnumerable<RegistrationSystem.Models.Version>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Listing</title>
</head>

<body class="m-1 p-1">
    <div class="bg-primary p-2 text-light mb-3"><h4>Module Listing</h4></div>
    <form asp-action="BackToVersion" method="get">
        <div class="text-right">
            <button type="submit" class="btn btn-secondary btn-sm mb-3">Version Setup</button>
        </div>
    </form>

    <table class="table table-striped table-bordered-sm">
        <thead>
            <tr>
                <th>Version Code</th>
                <th>Version Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (RegistrationSystem.Models.Version r in Model)
            {
            <tr>
                <td>@r.Ver_Code</td>
                <td>@r.Ver_Description</td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>