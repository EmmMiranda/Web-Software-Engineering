@model IEnumerable<System>

@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Listing</title>
</head>

<body class="m-1 p-1">
    <div class="bg-primary p-2 text-light"><h4>System Listing</h4></div>

    <table class="table table-striped table-bordered-sm">
        <thead>
            <tr>
                <th>System Code</th>
                <th>System Name</th>
                <th>System Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System s in Model)
            {
                <tr>
                    <td>@s.Sys_Code</td>
                    <td>@s.Sys_Name</td>
                    <td>@s.Sys_Description</td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="BackToSystem" method="get">
        <div class="text-right">
        <button type="submit" btn btn-primary" class="btn btn-primary">System</button>
        </div>
    </form>

</body>
</html>