<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    <link rel="stylesheet" href="~/lib/jquery/core.js" />
    <title>@ViewBag.Title</title>
    <style>
        .input-validation-error {
            border-color: red;
            background-color: #fee;
        }
    </style>
</head>
<body class="m-1 p-1">
    <div class="@ViewBag.TxtAlign bg-primary p-2 text-light mb-3">

        <div class="text-right">
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a style="font-size:x-small;"
                   asp-controller="Account" asp-action="Logout" class="btn btn-danger btn-sm">Logout</a>
            }
        </div>

        <h3>@ViewBag.HeaderTitle</h3>

    </div>

    @{
        var current_controller = ViewContext.RouteData.Values["controller"].ToString();
        if (current_controller != "Home" && current_controller != "Account")
        {
            <span class="ml-1 mb-3" style="float:right">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fa fa-home"></i>
                </a>
            </span>
            @*
            <div class="ml-1 mt-3" style="float:right; display:inline">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fa fa-home"></i>
                </a>
            </div>
                *@
        }
    }

    <div>
        @RenderBody()
    </div>
</body>
</html>
