@model IEnumerable<RegistrationSystem.Models.Version>

@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Search</title>
</head>

<body class="m-1 p-1">
    <div class="bg-primary p-2 text-light"><h4>Search Results</h4></div>

    <table class="table table-striped table-bordered-sm">
        <thead>
            <tr>
                <th>Version Code</th>
                <th>Version Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@r.Ver_Code, "SelectVersion", "Version", r)</td> @* new { @ViewBag.ControllerName }, s)</td> *@
                    <td>@r.Ver_Description</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>