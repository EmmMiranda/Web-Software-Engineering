@model Module
@{ 
    Layout = "_Layout";
    ViewBag.Title = "Index";
    ViewBag.HeaderTitle = "Module Entry Setup";
}
<!DOCTYPE html>
<html>
<body class="m-1 p-1">

    <div class="text-right">
        <form asp-action="Index" asp-controller="Home" method="get">
            <button type="submit" class="btn btn-secondary btn-sm text-right">Home</button>
        </form>
    </div>

    <form asp-action="ModuleForm" method="post">
        <div class="form-group">
            <div class="form-group">
                <div><span asp-validation-for="Mod_Sys_Code" class="text-danger"></span></div>

                <label asp-for="Mod_Sys_Code" class="mr-1">System code:</label>
                <div class="btn-group btn-group-sm">
                    
                    <input asp-for="Mod_Sys_Code" class="form-control-sm col-sm-5" />
                    <button type="submit" asp-controller="Module" asp-action="SystemSearch" class="btn btn-primary">Search</button>

                    <button type="submit" asp-action="GetFirst" formmethod="get" class="btn btn-outline-primary"><<</button>
                    <button type="submit" asp-action="GetPrev" formmethod="get" class="btn btn-outline-primary"><</button>

                    <button type="submit" asp-action="GetNext" formmethod="get" class="btn btn-outline-primary">></button>
                    <button type="submit" asp-action="GetLast" formmethod="get" class="btn btn-outline-primary">>></button>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Mod_Code" class="mr-1">Module code:</label>
                <div class="btn-group btn-group-sm">
                    
                    <input asp-for="Mod_Code" class="form-control-sm col-sm-5" />
                    <button type="submit" asp-action="SearchModule" class="btn btn-primary col-sm-3">Search</button>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Mod_Name">Module name:</label>
            <div><span asp-validation-for="Mod_Name" class="text-danger"></span></div>
            <input asp-for="Mod_Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Mod_Description">Module description:</label>
            <div><span asp-validation-for="Mod_Description" class="text-danger"></span></div>
            <input asp-for="Mod_Description" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Mod_Version">Module Version:</label>
            <div><span asp-validation-for="Mod_Version" class="text-danger"></span></div>
            <input asp-for="Mod_Version" class="form-control" />
        </div>

        <div class="form-group text-right">
            <button type="submit" class="btn btn-primary btn-sm">Submit</button>
            <button type="submit" asp-action="ModuleForm" class="btn btn-primary btn-sm" formmethod="get">Cancel</button>
            <button type="submit" asp-action="Delete" class="btn btn-primary btn-sm">Delete</button>
            <button type="submit" asp-controller="ModuleListing" asp-action="Listing" class="btn btn-primary btn-sm">Listing</button>
        </div>

    </form>
</body>
</html>
